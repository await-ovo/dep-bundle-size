{
  "name": "dep-bundle-size",
  "version": "1.0.0",
  "description": "Yet another bundle-phobia CLI client",
  "main": "index.js",
  "bin": "./dist/cli.mjs",
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepare-fixtures": "cd test/fixtures/base-project && npm ci && cd ../pnpm-workspace && pnpm install --frozen-lockfile && cd ../yarn-workspace && yarn install --frozen-lockfile",
    "test": "vitest run --coverage",
    "postinstall": "pnpm simple-git-hooks && pnpm run prepare-fixtures"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@clack/prompts": "^0.2.0",
    "cac": "^6.7.14",
    "fast-glob": "^3.2.12",
    "got": "^12.5.3",
    "js-yaml": "^4.1.0",
    "kolorist": "^1.7.0",
    "p-limit": "^4.0.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitest/coverage-c8": "^0.28.5",
    "eslint": "^8.25.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --color --cache --quiet"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
